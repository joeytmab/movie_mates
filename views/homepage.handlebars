<!-- Loop over each object in the posted reviews array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <!--creates link to view movie review-->
      <a href="/post/{{movies.id}}">{{movie_review}}</a>
    </h2>
    <p>Posted by {{user.username}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      <!--review content-->
      {{post_content}}
    </p>
  </div>
</div>
{{/each}}