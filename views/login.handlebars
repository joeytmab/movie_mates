{{!-- Login/register --}}

{{!-- LOGIN --}}
<div class="hero">
  <div class="form-box">
    <div class="button-box">
      <div id="btn"></div>
      <button type="button" class="toggle-btn" onclick="login()">Login</button>
      <button type="button" class="toggle-btn" onclick="register()">Register</button>
    </div>
    <form id="loginslide" class="login input-group">
      <div>
        <label for="email-login">Email:</label>
        <input class="input-field" type="text" id="email-login"/>
      </div>
      <div>
        <label for="password-login">Password:</label>
        <input class="input-field" type="password" id="password-login"/>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-primary submit-btn login-btn" type="submit">LOGIN</button>
      </div>
      
    </form>



{{!-- SIGNUP --}}
    <form id="register" class="signup-form input-group">
        <div class="form-group">
          <label for="name-signup"  class="fw-bold">Username:</label>
          <input class="input-field" type="text" id="username-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup" class="fw-bold">Email:</label>
          <input class="input-field" type="text" id="email-signup"/>
        </div>
        <div class="form-group">
          <label for="password-signup"  class="fw-bold">Password:</label>
          <input class="input-field" type="password" id="password-signup"/>
        </div>
        <div class="form-group d-flex justify-content-center">
          <button class="btn btn-primary submit-btn register-btn" type="submit">SIGNUP</button>
        </div>
      </form>
  </div>
</div>

<!--positioning of the register/login buttons-->
<script>

    var x = document.getElementById("loginslide");
    var y = document.getElementById("register");
    var z = document.getElementById("btn");

    function register() {
        x.style.left = "-450px";
        y.style.left = "50px";
        z.style.left = "110px";
    }
    function login() {
        x.style.left = "50px";
        y.style.left = "450px";
        z.style.left = "0";
    }
</script>
<!--login and signup JS -->
<script src="./js/login.js"></script>
<script src="/js/signup.js"></script>
