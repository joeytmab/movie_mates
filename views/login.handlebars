{{!-- Login/register --}}

<div class="hero">
        <div class="form-box">
            <div class="button-box">
                <div id="btn"></div>
                <button type="button" class="toggle-btn" onclick="login()">Login</button>
                <button type="button" class="toggle-btn" onclick="register()">Register</button>
            </div>
            <form id="login" class="input-group login-form">
                <input type="text" class="input-field" id="username-login" placeholder="User ID" required>
                <input type="text" class="input-field" id="password-login" placeholder="Enter Password" required>
                <input type="checkbox" class="check-box"><span>Remember Password</span>
                <button type="submit" class="submit-btn" id="login-btn">Login</button>
            </form>
            <form id="register" class="input-group signup-form">
                <input type="text" class="input-field" id="username-signup" placeholder="User ID" required>
                <input type="email" class="input-field" id="email-signup" placeholder="Email" required>
                <input type="password" class="input-field" id="password-signup" placeholder="Enter Password" required>
                <input type="checkbox" class="check-box"><span>I agree to the terms and conditions.</span>
                <button type="submit" class="submit-btn" id="signup-btn">Register</button>
            </form>
        </div>
    </div>
    <script>
        var x = document.getElementById("login");
        var y = document.getElementById("register");
        var z = document.getElementById("btn");

        function register() {
            x.style.left = "-450px";
            y.style.left = "50px";
            z.style.left = "110px";
        }
        function login() {
            x.style.left = "50px";
            y.style.left = "450px";
            z.style.left = "0";
        }
    </script>

<script src="./js/login.js"></script>

